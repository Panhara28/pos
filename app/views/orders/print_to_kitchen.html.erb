<style type="text/css">
	@media print {
		@page {
			size: auto;
			/* auto is the current printer page size */
			margin: 0mm;
			/* this affects the margin in the printer settings */
		}

		#cancel,
		#print {
			display: none;
		}
	}

	* {
		font-size: 13px;
		font-family: 'Times New Roman';
	}

	td,
	th,
	tr,
	table {
		border-top: 0px solid black;
		border-collapse: collapse;
	}

	td.description,
	th.description {
		width: 302.36px;
		max-width: 302.36px;
		text-align: left;
	}

	td.quantity,
	th.quantity {
		width: 302.36px;
		max-width: 302.36px;
		word-break: break-all;
		text-align: left;
	}

	td.price,
	th.price {
		width: 302.36px;
		max-width: 302.36px;
		word-break: break-all;
		text-align: left;
	}

	.centered {
		text-align: center;
		align-content: center;
	}

	.ticket {
		max-width: 70mm;
	}

	img {
		max-width: inherit;
		width: inherit;
	}

	.navbar,
	.fixed-sidebar-left {
		display: none;
	}
</style>

<div class="wrapper theme-2-active navbar-top-light horizontal-nav">
	<!-- Main Content -->
	<div class="page-wrapper" style="padding-top: 0px; background: white;">
		<div class="container pt-30">
			<div class="row">
				<div class="col-lg-4">
				</div>
				<div class="col-lg-4">
					<div class="ticket">
						<p class="centered">Mashisoyo Cambodia
							<br>Address line 1
							<div style="margin-bottom: 20px;">
								<p style="text-align: center; font-weight: bold;">វិក្កយបត្រ/Invoice</p>
								<p style=" margin: 0px;">វិក្កយបត្រ/Invoice No: <span
										style="float: right; margin-right: 10px;"><%=@order.id%></span></p>
								<p style=" margin: 0px;">តុ/Table: <span
										style="float: right;margin-right: 10px;"><%=@order.table_number.split(" ")[0]%><%=@order.table_number.split(" ")[1]%></span>
								</p>
								<p style=" margin: 0px;">អ្នកគិតលុយ/Cashier: <span
										style="float: right;margin-right: 10px;"><%=@order.user.username%></span></p>
								<p style=" margin: 0px;">កាលបរិច្ឆេត/Date Time: <span
										style="float: right;margin-right: 10px;"><%=@order.created_at%></span></p>
							</div>

							<table>
								<thead>
									<tr>
										<th class="quantity">QTY <br> ចំនួន</th>
										<th class="description">Description <br> បរិយាយ</th>
										<th class="price">Price​ <br> តំលៃ </th>
									</tr>
								</thead>
								<tbody>
									<%@order.order_items.each do |order|%>
									<tr style="border-top: 1px solid black; border-bottom: 1px solid black;">
										<td class="quantity"><%=order.quantity%></td>
										<td class="description"><%=order.product.product_name%></td>
										<%=in_invoice_free?(order.unit_price)%>
									</tr>
									<%end%>
								</tbody>
							</table>
					</div>
					<%=link_to print_reciept_path(@order), class: "btn btn-default btn-outline btn-icon left-icon", onclick: "printReciept();", id: "print" do%>
					<i class="fa fa-print"></i>
					<span>Pay</span>
					<%end%>
					<%=link_to "Cancel", sales_path, class: "btn btn-danger", id: "cancel"%>
				</div>
				<div class="col-lg-4">
				</div>
			</div>
		</div>

	</div>
	<!-- /Main Content -->
</div>

<script>
	function printReciept() {
		window.print();
	}
</script>