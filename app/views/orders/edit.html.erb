<!-- Main Content -->
<div class="page-wrapper">
  <div class="container pt-30">
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-success card-view">
          <div class="panel-heading">
            <div class="pull-left">
              <h6 class="panel-title txt-light">Edit Product</h6>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="panel-wrapper collapse in">
            <div class="panel-body">
              <%= simple_form_for @order do |f| %>
                <% if @order.errors.any? %>
                <div id="error_explanation">
                  <ul>
                    <% @order.errors.full_messages.each do |message| %>
                    <li class="btn btn-danger btn-outline fancy-button btn-0" style="width: 100%; margin-bottom: 20px;">
                      <%= message %>
                    </li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
                <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">Delivery Company</label>
                      <%=f.collection_select :delivery_id, Delivery.all, :id, :company, { prompt: "Select Company" } , {class: "form-control select2"}%>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">Table</label>
                      <%=f.select :table_number, Order::OPTION_TABLE, { prompt: "Select Table"}, {class: "form-control select2"}%>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">Members</label>
                      <%=f.collection_select :customer_id, Customer.all, :id, :customer_name, { prompt: "Select Customer" } , {class: "form-control select2"}%>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">VAT</label>
                      <%=f.number_field :tax, class: "form-control"%>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">Discount</label>
                      <%=f.number_field :discount, class: "form-control"%>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">USD</label>
                      <%= f.number_field :cash, :class => 'form-control', value: 0.0%>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">Order Date</label>
                      <%= f.text_field :order_date, :class => 'form-control', placeholder: "Choose order date", disabled: true %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="recipient-name" class="control-label mb-10">Order Time</label>
                      <%= f.text_field :order_time, :as => :string, :value => time_format(f.object.order_time), :class => 'form-control', label: false, placeholder: "Choose order time", disabled: true %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="modal-footer">
                      <%=link_to "Cancel", sales_path, class: "btn btn-default"%>
                      <%=f.submit class: "btn btn-success"%>
                    </div>
                  </div>
                </div>

                <%end%>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%=render "applications/footer"%>

</div>
<!-- /Main Content -->
