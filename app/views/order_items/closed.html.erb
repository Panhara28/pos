<style type="text/css">

	@media print {
		@page {
			size: auto;
			/* auto is the current printer page size */
			margin: 0mm;
			/* this affects the margin in the printer settings */
		}

		#cancel,
		#print {
			display: none;
		}

		th{
			font-size: 11px;
		}

	}

	* {
		font-size: 12px;
		font-family: 'Times New Roman';
	}

	td,
	th,
	tr,
	table {
		border-top: 0px solid black;
		border-collapse: collapse;
	}

	td.description,
	th.description {
		width: 130.36px;
		max-width: 302.36px;
		text-align: left;
		padding: 5px;
	}

	td.quantity,
	th.quantity {
		width: 302.36px;
		max-width: 302.36px;
		word-break: break-all;
		text-align: center;
	}

	td.price,
	th.price {
		width: 302.36px;
		max-width: 302.36px;
		word-break: break-all;
		text-align: left;
	}

	.centered {
		text-align: center;
		align-content: center;
	}

	.ticket {
		max-width: 70mm;
	}

	img {
		max-width: inherit;
		width: inherit;
	}

	.navbar,
	.fixed-sidebar-left {
		display: none;
	}

  .pay-btn{
    background: #ff6028;
    padding: 20px 120px;
		color: #fff;
		font-size: 16px;
	}
	.pay-cancel{
		background:#dcdcdc;
    padding: 20px 112px;
		color: #000;
		font-size: 16px;
	}

</style>

<div class="wrapper theme-2-active navbar-top-light horizontal-nav">
	<!-- Main Content -->
	<div class="page-wrapper" style="padding-top: 0px; background: white;">
		<div class="container pt-30">
			<div class="row">
				<div class="col-lg-4">
				</div>
				<div class="col-lg-4">
					<div class="ticket">
						<p class="centered">
							<img src="/mashisoyologo.png"/>
							<div style="margin-bottom: 20px;">
								<div style="margin-bottom: 5px;"></div>
								<p style=" margin: 0px;"><span style="float: right; margin-right: 10px;">Time: <%=Time.zone.now.strftime("%I:%M %p")%></span></p>
								<br />
								<div style="margin-bottom: 5px;"></div>
								<p style=" margin: 0px;"><span style="float: right; margin-right: 10px;">Date: <%=DateTime.now%></span></p>
							</div>
							<br><br>
							<table>
								<thead>
									<tr>
										<th class="description">Description</th>
										<th class="quantity">Qty</th>
										<th class="price" style="text-align: center;">Priceâ€‹</th>
										<th class="price" style="text-align: center;">Total</th>
										<th class="price">Dis</th>
										<th class="price" style="text-align: center;">Sell</th>
									</tr>
								</thead>
								<tbody>
                  <%@orders_count.each do |order_item|%>
                      <tr style="border-top: 1px solid black; border-bottom: 1px solid black;">
                        <td class="description"><%=order_item[0]%></td>
                        <td class="quantity"><%=order_item[1]%></td>
                        <td class="quantity"><%= number_to_currency(order_item[2], precision: 2)%></td>
                        <td style="text-align: center;"><%=number_to_currency(order_item[2] * order_item[1], precision: 2)%></td>
												<td class="quantity" style="text-align: left;"><%=number_to_currency((order_item[2] * order_item[1])  * (order_item[4] / 100), precision: 2)%></td>
												<td class="quantity" style="text-align: center;"><%=number_to_currency(order_item[5] * ( order_item[4] === 0.0 ? 1:(order_item[4] / 100)), precision: 2)%></td>
                      </tr>
									<%end%>
									<tr>
										<td></td>
										<td></td>
										<td></td>
										<td></td>
										<td></td>
										<td>Total: 
											<%=number_to_currency(@orders_count.map{ |x| x[5] * (x[4] === 0.0 ? 1:x[4] / 100) }.sum, precision: 2)%> 
										</td >
									</tr>
								</tbody>
							</table>
							<br><br>
					</div>

					<br />
          <%=link_to destroy_user_session_path, method: :delete, class: "pay-btn", onclick: "printReciept();", id: "print" do%>
						Print
					<%end%>
					<br><br><br>
					<%=link_to "Cancel", sales_path, class: "pay-cancel", id: "cancel"%>
				</div>
				<div class="col-lg-4">
				</div>
			</div>
		</div>

	</div>
	<!-- /Main Content -->
</div>

<script>
	function printReciept(){
		window.print();
	}
</script>