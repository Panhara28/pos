<div class="wrapper theme-2-active navbar-top-light horizontal-nav">
	<%=render "components/nav"%>
	<%=render "components/setting"%>
	<div id="setting-success"></div>
	<!-- Main Content -->
	<div class="page-wrapper">
		<div class="container pt-30">
			<div class="row">
				<div class="col-md-9">
					<div class="panel panel-success card-view">
						<div class="panel-heading">
							<div class="pull-left">
								<h6 class="panel-title txt-light">Edit Product</h6>
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="panel-wrapper collapse in">
							<div class="panel-body">
								<%=simple_form_for([:admin, @setting], remote: true) do |f|%>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="recipient-name" class="control-label mb-10">USD</label>
											<%=f.number_field :usd_amount, class: "form-control"%>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="recipient-name" class="control-label mb-10">Riel</label>
											<%=f.number_field :riel_amount, class: "form-control", step: :any%>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="recipient-name" class="control-label mb-10">Vat</label>
											<%=f.number_field :vat, class: "form-control", step: :any%>
										</div>
									</div>
							
									<div class="col-md-12">
										<div class="modal-footer">
											<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
											<%=f.submit class: "btn btn-success"%>
										</div>
									</div>
								</div>
							
							<%end%>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%=render "components/footer"%>

</div>
<!-- /Main Content -->
</div>
