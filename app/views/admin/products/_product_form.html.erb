<%=simple_form_for([:admin, product], remote: true) do |f|%>
<div class="row">

  <div class="col-md-6">
    <div class="form-group">
      <label for="recipient-name" class="control-label mb-10">Category</label>
      <%=f.collection_select :category_id, Category.all, :id, :category_name, { prompt: "Select Category" } , {class: "form-control select2"}%>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label for="recipient-name" class="control-label mb-10">Product Name</label>
      <%=f.text_field :product_name, class: "form-control"%>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label for="recipient-name" class="control-label mb-10">Sell Price</label>
      <%=f.number_field :product_price, class: "form-control", step: :any%>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label for="recipient-name" class="control-label mb-10">Original Price</label>
      <%=f.number_field :original_price, class: "form-control", step: :any%>
    </div>
  </div>

  <div class="col-md-12">
    <div class="form-group">
      <label for="recipient-name" class="control-label mb-10">Description</label>
      <%=f.text_area :description, class: "form-control", rows: "10" %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label for="recipient-name" class="control-label mb-10">Discountinue</label>
      <br>
      <%=f.check_box :status%>
    </div>
  </div>
  

  <div class="col-md-12">
    <div class="control-group file-upload" id="file-upload1">
      <h3>Upload Photo</h3>
      <div class="image-box text-center">
        <p>Upload Image</p><img src="" alt="">
      </div>
      <div class="controls">
        <%=f.file_field :image%>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%=f.submit class: "btn btn-success"%>
    </div>
  </div>
</div>

<%end%>