<%=simple_form_for([:admin, delivery], remote: true) do |f|%>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Company Name</label>
        <%=f.text_field :company, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Delivery Fee</label>
        <%=f.number_field :delivery_fee, class: "form-control", step: :any%>
      </div>
    </div>

    <div class="col-md-12">
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%=f.submit class: "btn btn-success"%>
      </div>
    </div>
  </div>

<%end%>
