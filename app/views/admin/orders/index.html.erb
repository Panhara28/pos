<div class="wrapper theme-2-active navbar-top-light horizontal-nav">
  <%=render "components/nav"%>
  <%=render "components/setting"%>
  <!-- Main Content -->
  <div class="page-wrapper">
    <div class="container pt-30">
      <!-- Row -->
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default border-panel card-view">
            <div class="panel-heading">
              <div class="pull-left">
                <h6 class="panel-title txt-dark">order</h6>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
              <div class="panel-body">
                <div class="table-wrap">
                  <div class="">
                    <table id="example" class="cell-border">
                      <thead>
                        <tr>
                          <th>Invoice No</th>
                          <th>Order Date</th>
                          <th>Order Time</th>
                          <th>Customer</th>
                          <th>Order Tax</th>
                          <th>Order Shipping</th>
                          <th>Subtotal</th>
                          <th>Discount</th>
                          <th>Grand Total</th>
                          <th>Profit</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%@orders.each do |order|%>
                        <tr class="delete_order_<%=order.id%>">
                          <td>
                            <%= '%05d' % order.id %>
                          </td>
                          <td>
                            <%= order.order_date %>
                          </td>
                          <td>
                            <%= order.order_time.strftime("%I:%M %p") %>
                          </td>
                          <td>
                            <%= order.customer.customer_name %>
                          </td>
                          <td>
                            <%= order.tax %>
                          </td>
                          <td>
                            <%= order.shipping %>
                          </td>
                          <td>
                            <%= number_to_currency(order.subtotal, precision: 2) %>
                          </td>
                          <td>
                            <%= number_to_percentage(order.discount, precision: 0) %>
                          </td>
                          <td>
                            <%= number_to_currency(order.total, precision: 2) %>
                          </td>
                          <td>
                            <%= number_to_currency(order.profit, precision: 2) %>
                          </td>
                          <td>
                            <%=link_to admin_order_path(order), email: "View" do %>
                            View
                            <%end%>
                            <%=link_to edit_admin_order_path(order), email: "Edit",id: "show-form_#{order.id}" do %>
                            Edit
                            <%end%>
                          </td>
                        </tr>
                        <%end%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /Row -->
    </div>

    <%=render "components/footer"%>

  </div>
  <!-- /Main Content -->
</div>