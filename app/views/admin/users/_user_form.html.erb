<%=simple_form_for([:admin, user], remote: true) do |f|%>
  <div class="row">
    <div class="col-lg-12">
      <h2>Employee Security</h2>
    </div>
   <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Username</label>
        <%=f.text_field :username, class: "form-control"%>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Email</label>
        <%=f.text_field :email, class: "form-control"%>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Password</label>
        <%=f.password_field :password, class: "form-control"%>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Confirmation Password</label>
        <%=f.password_field :password_confirmation, class: "form-control"%>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-lg-12">
      <h2>Employee Information</h2>
    </div>
    <div class="col-md-12">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Role</label>
        <%=f.select :role,(User.roles.keys.map{ |role| [role.titleize, role]}), {}, {:class=>"form-control"}%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">First Name</label>
        <%=f.text_field :first_name, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Last Name</label>
        <%=f.text_field :last_name, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-12">
      <div class="control-group file-upload" id="file-upload1">
      <h3>Upload Photo</h3>
      <div class="image-box text-center"><p>Upload Image</p><img src="" alt=""></div>
        <div class="controls">
            <%=f.file_field :photo%>
        </div>
      </div>
    </div>
    
    <div class="col-md-12">
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%=f.submit class: "btn btn-success"%>
      </div>
    </div>
  </div>

<%end%>
