<div class="wrapper theme-2-active navbar-top-light horizontal-nav">
	<%=render "components/nav"%>
	<%=render "components/setting"%>
	<!-- Main Content -->
	<div class="page-wrapper">
		<div class="container pt-30">
			<div class="row">
				<div class="col-md-9">
					<div class="panel panel-success card-view">
						<div class="panel-heading">
							<div class="pull-left">
								<h6 class="panel-title txt-light">Edit Product</h6>
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="panel-wrapper collapse in">
							<div class="panel-body">                         
                <%=simple_form_for([:admin, @user]) do |f|%>
                  <div class="row">
                    <div class="col-lg-12">
                      <h2>Employee Security</h2>
                    </div>
                  <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Username</label>
                        <%=f.text_field :username, class: "form-control"%>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Email</label>
                        <%=f.text_field :email, class: "form-control"%>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Password</label>
                        <%=f.password_field :password, class: "form-control"%>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Confirmation Password</label>
                        <%=f.password_field :password_confirmation, class: "form-control"%>
                      </div>
                    </div>
                  </div>
                  <hr/>
                  <div class="row">
                    <div class="col-lg-12">
                      <h2>Employee Information</h2>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Role</label>
                        <%=f.select :role, User::OPTION_ROLE, {}, {:class=>"form-control"}%>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">First Name</label>
                        <%=f.text_field :first_name, class: "form-control"%>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Last Name</label>
                        <%=f.text_field :last_name, class: "form-control"%>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="recipient-name" class="control-label mb-10">Discountinue</label>
                        <br>
                        <%=f.check_box :is_active%>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="control-group file-upload" id="file-upload1">
                       <h3>Upload Photo</h3>
                       <%if @user.image.present?%>
                          <img class="image-box" src="<%=@user.image.url%>" alt="">
                        <%else%>
                          <div class="image-box text-center"><p>Upload Image</p><img src="" alt=""></div>
                        <%end%>
                        <div class="controls">
                            <%=f.file_field :image%>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                      <div class="modal-footer">
                        <%=link_to "Cancel", admin_users_path, class: "btn btn-default"%>
                        <%=f.submit class: "btn btn-success"%>
                      </div>
                    </div>
                  </div>

                <%end%>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%=render "components/footer"%>

</div>
<!-- /Main Content -->
</div>
