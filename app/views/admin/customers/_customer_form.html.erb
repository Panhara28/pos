<%=simple_form_for([:admin, customer], remote: true) do |f|%>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Customer Name</label>
        <%=f.text_field :customer_name, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Email</label>
        <%=f.email_field :email, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Phone Number</label>
        <%=f.text_field :phone, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="recipient-name" class="control-label mb-10">Customer Name</label>
        <%=f.date_field :dob, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-12">
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%=f.submit class: "btn btn-success"%>
      </div>
    </div>
  </div>

<%end%>
